{
  "expo": {
    "name": "UtilitySenseKit",
    "slug": "UtilitySenseKit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "utilitysensekit",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.UtilitySenseKit",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Your app needs access to your location to scan for Wi-Fi and Bluetooth devices.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Your app needs access to your location to scan for Wi-Fi and Bluetooth devices in the background.",
        "NSBluetoothAlwaysUsageDescription": "Your app needs Bluetooth access to scan for and connect to devices.",
        "NSBluetoothPeripheralUsageDescription": "Your app needs Bluetooth access to scan for and connect to devices.",
        "NSCameraUsageDescription": "Your app needs camera access to scan barcodes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.UtilitySenseKit",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "ACCESS_WIFI_STATE",
        "CHANGE_WIFI_STATE",
        "CHANGE_NETWORK_STATE",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "BLUETOOTH_ADVERTISE",
        "NEARBY_WIFI_DEVICES",
        "CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}

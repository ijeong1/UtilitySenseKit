{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@/src/*": ["./src/*"], // src folder
      "@/components/*": ["./src/components/*"], // components folder
      "@/hooks/*": ["./src/hooks/*"], // hooks folder
      "@/api/*": ["./src/api/*"], // api folder
      "@/services/*": ["./src/services/*"], // 
      "@/utils/*": ["./src/utils/*"], // utils folder
      "@/types/*": ["./src/types/*"], // types folder
      "@/constants/*": ["./src/constants/*"], // constants folder
      "@/config/*": ["./src/config/*"] // config folder
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
  
}
